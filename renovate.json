{
  "extends": [
    "config:base",
    ":pinAllExceptPeerDependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "ignoreDeps": [
    "husky"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ]
    },
    {
      "groupName": "dependencies",
      "matchDepTypes": [
        "dependencies"
      ]
    },
    {
      "groupName": "devDependencies",
      "matchDepTypes": [
        "devDependencies"
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
