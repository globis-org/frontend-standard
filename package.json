{
  "private": true,
  "name": "@globis/frontend-standard",
  "description": "standard configuraton for frontend development at globis",
  "license": "MIT",
  "homepage": "https://github.com/globis-org/frontend-standard#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/globis-org/frontend-standard.git"
  },
  "bugs": {
    "url": "https://github.com/globis-org/frontend-standard/issues"
  },
  "version": "0.3.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "lint": "eslint --cache .",
    "release:prepare": "shipjs prepare",
    "release:trigger": "shipjs trigger",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "prettier-package-json": "2.1.3",
    "shipjs": "0.18.4",
    "typescript": "3.8.3"
  },
  "keywords": [
    "es",
    "globis",
    "jsx",
    "lint",
    "react",
    "typescript"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package.json": [
      "prettier-package-json --write"
    ]
  }
}
